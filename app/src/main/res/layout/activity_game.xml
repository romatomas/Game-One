<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imgPhoto"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        android:layout_below="@+id/imgBtnBackGame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnA"
        android:text="A"
        android:width="140dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgPhoto"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnB"
        android:text="B"
        android:width="140dp"
        android:layout_above="@+id/btnC"
        android:layout_alignRight="@+id/imgPhoto"
        android:layout_alignEnd="@+id/imgPhoto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnC"
        android:text="C"
        android:width="140dp"
        android:layout_below="@+id/btnA"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnD"
        android:text="D"
        android:width="140dp"
        android:layout_below="@+id/btnB"
        android:layout_alignLeft="@+id/btnB"
        android:layout_alignStart="@+id/btnB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score:  "
        android:id="@+id/txtScoreView"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnC"
        android:layout_alignStart="@+id/btnC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/txtScore"
        android:layout_alignTop="@+id/txtScoreView"
        android:layout_toRightOf="@+id/txtScoreView"
        android:layout_toEndOf="@+id/txtScoreView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtInfo"
        android:textSize="40sp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/imgPhoto"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/btnOK"
        android:visibility="invisible"
        android:textSize="40dp"
        android:layout_below="@+id/imgPhoto"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnBackGame"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtScore"
        android:layout_alignEnd="@+id/txtScore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AlcoPoints"
        android:id="@+id/txtViewAP"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>