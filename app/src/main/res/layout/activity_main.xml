<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imgLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:src="@drawable/logo" />

    <Button
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textSize="30sp"
        android:id="@+id/btnStart"
        android:clickable="false"
        android:visibility="visible"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Drink of the day"
        android:textSize="20sp"
        android:id="@+id/btnDOTD"
        android:layout_below="@+id/btnStart"
        android:layout_alignLeft="@+id/btnStart"
        android:layout_alignStart="@+id/btnStart"
        android:layout_alignRight="@+id/btnStart"
        android:layout_alignEnd="@+id/btnStart" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnFav"
        android:background="@drawable/favorites"
        android:layout_below="@+id/btnDOTD"
        android:layout_alignRight="@+id/btnDOTD"
        android:layout_alignEnd="@+id/btnDOTD" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnFB"
        android:clickable="true"
        android:cropToPadding="false"
        android:background="@drawable/fb_mini"
        android:layout_alignTop="@+id/imgBtnSound"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnSound"
        android:background="@drawable/sound_on"
        android:clickable="true"
        android:cropToPadding="false"
        android:layout_alignTop="@+id/imgBtnFav"
        android:layout_alignLeft="@+id/btnDOTD"
        android:layout_alignStart="@+id/btnDOTD" />

</RelativeLayout>
